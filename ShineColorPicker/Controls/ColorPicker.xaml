<UserControl x:Class="ShineColorPicker.Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShineColorPicker.Controls"
             mc:Ignorable="d" Height="24" Width="140">
    <Grid>
        <Border BorderBrush="Black" Background="#FFFFFF" BorderThickness="1" x:Name="colorPreview" HorizontalAlignment="Left" Width="40">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Webdings" Text="s" x:Name="errorText" Visibility="Collapsed" />
        </Border>
        <Button x:Name="btnPicker" Content="..." FontSize="16" HorizontalAlignment="Right" Width="32" Click="button_Click"/>
        <TextBox x:Name="textBox" Margin="53,0,32,0" Text="FFFFFF" MaxLines="1" MaxLength="6" VerticalContentAlignment="Center" TextChanged="textBox_TextChanged" />
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="45,4,0,4" TextWrapping="Wrap" Text="#" Width="8" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
